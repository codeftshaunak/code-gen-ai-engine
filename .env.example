# Application Configuration
APP_NAME=Builder AI Engine
VERSION=1.0.0
DEBUG=True
PORT=3100

# CORS Origins (use "*" for all origins, or comma-separated list)
# Examples:
#   CORS_ORIGINS=*
#   CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ORIGINS=*

# Sandbox Provider Configuration
# Options: e2b, vercel
SANDBOX_PROVIDER=e2b

# E2B Sandbox Configuration
E2B_API_KEY=your_e2b_api_key_here
E2B_TIMEOUT_MINUTES=20
E2B_VITE_PORT=5173
E2B_WORKING_DIR=/home/user/app

# Vercel Sandbox Configuration
VERCEL_TOKEN=your_vercel_token_here
VERCEL_TEAM_ID=your_team_id
VERCEL_PROJECT_ID=your_project_id
VERCEL_OIDC_TOKEN=
VERCEL_TIMEOUT_MINUTES=20
VERCEL_DEV_PORT=3000
VERCEL_WORKING_DIR=/app

# AI Model Provider API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default AI Model Configuration
DEFAULT_AI_MODEL=anthropic/claude-3-5-sonnet-20241022
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=8000

# Optional: Morph Fast Apply
MORPH_API_KEY=

# Package Installation Configuration
USE_LEGACY_PEER_DEPS=True
PACKAGE_INSTALL_TIMEOUT=60000
AUTO_RESTART_VITE=True

# Code Application Configuration
DEFAULT_REFRESH_DELAY=2000
PACKAGE_INSTALL_REFRESH_DELAY=5000
