# Application Configuration
APP_NAME=Builder AI Engine
VERSION=1.0.0
DEBUG=True
PORT=3100

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# OpenRouter API Key (Required - provides access to all AI models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Default AI Model Configuration
# Use any model available on OpenRouter (e.g., anthropic/claude-3-5-sonnet-20241022)
DEFAULT_AI_MODEL=anthropic/claude-3-5-sonnet-20241022
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=8192

# Retry Configuration
MAX_RETRIES=2
RETRY_DELAY_SECONDS=2
